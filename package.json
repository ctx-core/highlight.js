{
	"name": "@ctx-core/highlight.js",
	"version": "5.0.17",
	"description": "ctx-core highlight.js",
	"keywords": [
		"ctx-core",
		"highlight.js"
	],
	"homepage": "https://github.com/ctx-core/highlight.js#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/highlight.js/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/highlight.js/issues"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./src/index.ts",
	"scripts": {
		"build": "npm run clean && npm run copy-mjs && npm run compile",
		"clean": "rm -f tsconfig.tsbuildinfo && rm -f src/**/*.js && rm -f src/**/*.d.ts && rm -f src/**/*.map",
		"compile": "./node_modules/.bin/tsc -b .",
		"copy-mjs": "cd dist && echo \"module.exports = (async () => import('./index.js'))()\" > index.cjs",
		"exec": "$@",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"@ctx-core/dom": "workspace:^11.0.21",
		"@ctx-core/function": "workspace:^20.1.3",
		"esm": "^3.2.25"
	},
	"devDependencies": {
		"highlight.js": "^11.2.0",
		"typescript": "^4.4.2"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	}
}